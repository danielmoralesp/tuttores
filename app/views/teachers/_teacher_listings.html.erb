<div class="content animate-panel">

  <div class="row">
      <div class="col-md-3">
          <div class="hpanel">
              <div class="panel-body">
                  <div class="m-b-md">
                      <h4>
                          Filters
                      </h4>
                      <small>
                          Filter your project basend on diferent options below.
                      </small>
                  </div>

                  <%= form_tag search_teachers_path, method: :get do |f| %>
                  <div class="form-group">
                      <label class="control-label">Ciudad:</label>
                      <div class="input-group">
                          <%= select_tag :city, content_tag(:option,'Selecciona...',:value=>"")+options_from_collection_for_select(City.all, :id, :name), class: "form-control m-b" %>
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="control-label">Materia:</label>
                      <div class="input-group">
                          <%= select_tag :topic, content_tag(:option,'Selecciona...',:value=>"")+options_from_collection_for_select(Topic.all, :id, :name), class: "form-control m-b" %>
                      </div>
                  </div>
                  <%= submit_tag "Buscar", class: "btn btn-success btn-block" %>
                  <% end %>
              </div>
          </div>
      </div>
      <div class="col-md-9">
          <div class="row">

            <% @teachers.each do |teacher| %>
            <div class="col-lg-4">
                <div class="hpanel hgreen contact-panel">
                    <%= link_to teacher do %>
                    <div class="panel-body">
                        <span class="label label-success pull-right">NEW</span>
                        <img alt="logo" class="img-circle m-b" src="/assets/profile.jpg">
                        <h3> Bradly Danforth </h3>
                        <div class="text-muted font-bold m-b-xs">California, LA</div>
                        <p>
                            <%= teacher.about_me %>
                        </p>
                    </div>
                    <% end %>
                    <div class="panel-footer contact-footer">
                        <div class="row">
                            <div class="col-md-4 border-right"> <div class="contact-stat"><span>Projects: </span> <strong>200</strong></div> </div>
                            <div class="col-md-4 border-right"> <div class="contact-stat"><span>Messages: </span> <strong>300</strong></div> </div>
                            <div class="col-md-4"> <div class="contact-stat"><span>Views: </span> <strong>400</strong></div> </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
          </div>
      </div>
  </div>
