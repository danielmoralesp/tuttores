<%= render 'teachers/header_app' %>

<!-- Main Wrapper -->
<div id="wrapper">

  <br><br><br>

<div class="content animate-panel">

<div>

  <div class="row">
      <div class="col-lg-12">
          <div class="hpanel">
              <div class="panel-body">
                  <h3>Asignamos a uno de los mejores 5 profesores</h3>
              </div>
          </div>
      </div>
  </div>

  <div class="row">
  <div class="col-lg-12">
      <div class="hpanel">
          <div class="panel-heading">
              <div class="panel-tools">
                  <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                  <a class="closebox"><i class="fa fa-times"></i></a>
              </div>
          </div>
          <div class="panel-body">

              <%= form_for @tutoring, :html => {:class => 'form-horizontal'} do |f| %>

                  <div class="form-group">

                    <%= f.label :country_id, 'Pais de Tutoria:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <div class="input-group m-b">
                        <%= f.collection_select :country_id, Country.order(:name), :id, :name, include_blank: true, class: "form-control" %>
                      </div>
                    </div>

                    <%= f.label :city_id, 'Ciudad de Tutoria:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <div class="input-group m-b">
                        <%= f.grouped_collection_select :city_id, Country.order(:name), :cities, :name, :id, :name, include_blank: true, class: "input-group m-b" %>
                      </div>
                    </div>

                    <%= f.label :subject_id, 'Materia:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <div class="input-group m-b">
                        <%= f.collection_select :subject_id, Subject.order(:name), :id, :name, include_blank: true, class: "form-control" %>
                      </div>
                    </div>

                    <%= f.label :topic_id, 'Sub-Materia:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <div class="input-group m-b">
                        <%= f.grouped_collection_select :topic_id, Subject.order(:name), :topics, :name, :id, :name, include_blank: true, class: "input-group m-b" %>
                      </div>
                    </div>

                    <%= f.label :place, 'Direccion para la Tutoria:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= f.text_field :place, class: "form-control input-lg m-b" %>
                    </div>

                    <%= f.label :num_hours, 'Numero de Horas:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= f.text_field :num_hours, class: "form-control input-lg m-b" %>
                    </div>

                    <%= f.label :hour, 'Hora de la tutoria:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= f.text_field :hour, class: "form-control input-lg m-b" %>
                    </div>

                  </div>
                  <div class="hr-line-dashed"></div>
                  <div class="form-group">
                      <div class="col-sm-8 col-sm-offset-2">
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        <%= button_to 'Cancelar', root_path, class: 'btn btn-default' %>
                        <%= f.submit "Solicitar", class: 'btn btn-primary' %>
                      </div>
                  </div>
              <% end %>
          </div>
      </div>
  </div>
  </div>



</div>

</div>

    <!-- Footer-->
    <footer class="footer">
        <span class="pull-right">
            Example text
        </span>
        Copyrigth 2017
    </footer>

</div>



</body>
