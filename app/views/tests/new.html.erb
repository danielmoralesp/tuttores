<%= render 'teachers/header_app' %>

<!-- Main Wrapper -->
<div id="wrapper">

  <br><br><br>

<div class="content animate-panel">

<div>

  <div class="row">
      <div class="col-lg-12">
          <div class="hpanel">
              <div class="panel-body">
                  <h3>Test de conocimiento</h3>
                  <p>Individual form controls automatically receive some global styling. All textual <code>&lt;input&gt;</code>, <code>&lt;textarea&gt;</code>, and <code>&lt;select&gt;</code> elements with <code>.form-control</code> are set to <code>width: 100%;</code> by default. Wrap labels and controls in <code>.form-group</code> for optimum spacing.</p>
              </div>
          </div>
      </div>
  </div>

  <div class="row">
  <div class="col-lg-12">
      <div class="hpanel">
          <div class="panel-heading">
              <div class="panel-tools">
                  <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                  <a class="closebox"><i class="fa fa-times"></i></a>
              </div>
              Form elements options
          </div>
          <div class="panel-body">

              <%= form_for @test, :html => {:class => 'form-horizontal'} do |f| %>

                  <div class="form-group">

                    <%= f.label :subject_id, 'Materia:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <div class="input-group m-b">
                        <%= f.collection_select :subject_id, Subject.order(:name), :id, :name, include_blank: true, class: "form-control" %>
                      </div>
                    </div>

                    <%= f.label :topic_id, 'Sub-Materia:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <div class="input-group m-b">
                        <%= f.grouped_collection_select :topic_id, Subject.order(:name), :topics, :name, :id, :name, include_blank: true, class: "input-group m-b" %>
                      </div>
                    </div>

                    <%= f.label :questions, 'Pregunta:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= f.text_field :questions, class: "form-control input-lg m-b" %>
                    </div>

                    <%= f.label :questions, 'Respuesta:', class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= f.text_area :questions, rows: 10, required: true, class: "form-control input-lg m-b" %>
                    </div>

                  </div>
                  <div class="hr-line-dashed"></div>
                  <div class="form-group">
                      <div class="col-sm-8 col-sm-offset-2">
                        <%= button_to 'Cancelar', root_path, class: 'btn btn-default' %>
                        <%= f.submit "Solicitar", class: 'btn btn-primary' %>
                      </div>
                  </div>
              <% end %>
          </div>
      </div>
  </div>
  </div>



</div>

</div>

    <!-- Footer-->
    <footer class="footer">
        <span class="pull-right">
            Example text
        </span>
        Company 2015-2020
    </footer>

</div>



</body>
