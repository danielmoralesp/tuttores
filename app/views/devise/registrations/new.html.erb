<body class="blank">

  <div class="color-line"></div>
  <div class="back-link">
      <a href="index.html" class="btn btn-primary">Back to Dashboard</a>
  </div>
  <div class="register-container">
      <div class="row">
          <div class="col-md-12">
              <div class="text-center m-b-md">
                  <h3>Registration</h3>
                  <small>Full suported AngularJS WebApp/Admin template with very clean and aesthetic style prepared for your next app. </small>
              </div>
              <div class="hpanel">
                  <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <div class="row">
                        <%= devise_error_messages! %>

                        <div class="form-group col-lg-12">
                          <label><%= f.label 'Eres Estudiante o Profesor?' %></label>
                          <%= f.select :role, User.roles.keys.map {|key| [key.humanize != 'Admin' ? key.humanize : {:disabled => true}, key]}, {}, {autofocus: true, class: 'form-control'}  %>
                        </div>

                        <div class="form-group col-lg-12">
                          <label><%= f.label :name %></label>
                          <%= f.text_field :name, autofocus: true, class: "form-control" %>
                        </div>

                        <div class="form-group col-lg-12">
                          <label><%= f.label :email %></label>
                          <%= f.email_field :email, autofocus: true, class: "form-control" %>
                        </div>

                        <div class="form-group col-lg-6">
                          <label><%= f.label :password %></label>
                          <% if @validatable %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %><br />
                          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                        </div>

                        <div class="form-group col-lg-6">
                          <label><%= f.label :password_confirmation %></label>
                          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                        </div>

                        <div class="form-group col-lg-12">
                            <div class="">
                            </div>
                        </div>

                        <div class="text-center">
                          <%= f.submit "Register", class: "btn btn-success" %>
                          <button class="btn btn-default">Cancel</button>
                        </div>
                      </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
                  </div>
              </div>
          </div>
      </div>
      <div class="row">
          <div class="col-md-12 text-center">
              <strong>HOMER</strong> - AngularJS Responsive WebApp <br/> 2015 Copyright Company Name
          </div>
      </div>
  </div>
  <br><br><br>
</body>
